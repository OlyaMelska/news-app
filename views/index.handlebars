<div class="flex-wrap" id="articles">
    {{#each articles}}
    <div class="box item">


        <img src="{{imageURL}}" alt="article's image" class="img itemImg" value="{{_id}}">


        <a href="{{link}}">
            <h2>{{headline}}</h2>
        </a>
        <p class="toUppercase">{{category}}</p>

    </div>

    {{/each}}

</div>

<div class="left hide" id="comments">

    <div id="display-comments" class="left"></div>
    {{!-- <div>
        <a href="/">
            <img src="./images/arrow.png" alt="go back" id="go-back">
        </a>

    </div> --}}

    <form>
        <div class="card-header">
            <h3>Leave your comment here</h3>
            <div class="bottom-margin ">
                <input type="text" placeholder="Type in your name" id="name" class="input-fields">
            </div>

            <div class="bottom-margin ">
                <input type="text" placeholder="Create username" id="username" class="input-fields">
            </div>

            <div>
                <textarea placeholder="Start typing..." id="comment" class="input-fields"></textarea>
            </div>
            <button class="btn btn-dark" type="submit" id="submit">Submit</button>
            <a href="/">
                <button class="btn btn-dark" type="submit" id="submit">Go Back</button>
            </a>
        </div>
    </form>
</div>

